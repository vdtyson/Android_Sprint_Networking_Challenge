<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/poke_cv"
    android:elevation="8dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Switch
            android:text="ADD"
            android:switchPadding="8dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/cv_poke_image"
            app:layout_constraintRight_toLeftOf="@id/cv_poke_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/favorite_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/cv_poke_image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/cv_poke_name"
            app:layout_constraintLeft_toLeftOf="@id/cv_poke_name"
            app:layout_constraintRight_toRightOf="@id/cv_poke_name"
            android:textSize="20dp"
            android:id="@+id/cv_poke_id"
            android:text="022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/cv_poke_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Charizard"
            android:textSize="30dp"
            android:id="@+id/cv_poke_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/cv_detail_button"
            android:textAlignment="center"
            android:text="Details"
            app:layout_constraintTop_toBottomOf="@id/cv_poke_id"
            app:layout_constraintLeft_toLeftOf="@id/cv_poke_name"
            app:layout_constraintRight_toRightOf="@id/cv_poke_name"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>